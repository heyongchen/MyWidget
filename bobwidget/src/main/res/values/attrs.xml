<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="FilterView">
        <attr name="underlineColor" format="color" />
        <attr name="dividerColor" format="color" />
        <attr name="textSelectedColor" format="color" />
        <attr name="textUnselectedColor" format="color" />
        <attr name="menuBackgroundColor" format="color" />
        <attr name="maskColor" format="color" />
        <attr name="menuTextSize" format="dimension" />
        <attr name="menuSelectedIcon" format="reference" />
        <attr name="menuUnselectedIcon" format="reference" />
    </declare-styleable>

    <declare-styleable name="RatingBarView">
        <attr name="levelCount" format="integer" /><!--总的星星数-->
        <attr name="levelWidthAndHeight" format="dimension" /><!--单个星星的宽度-->
        <attr name="levelDividerWidth" format="dimension" /><!--星星左右间距-->
        <attr name="levelStateResId" format="reference" /><!--单个星星不同状态下对应的图标-->
    </declare-styleable>

    <declare-styleable name="RatingStarView">
        <attr name="starCount" format="integer" /><!--总的星星数-->
        <attr name="canEdit" format="boolean" /><!--是否可以点击选择，有时候纯展示用不需要选择-->
        <attr name="widthAndHeight" format="dimension" /><!--单个星星的宽度-->
        <attr name="dividerWidth" format="dimension" /><!--星星左右间距-->
        <attr name="countSelected" format="integer" /><!--当前已选中的星星个数-->
        <attr name="stateResId" format="reference" /><!--单个星星不同状态下对应的图标-->
        <attr name="differentSize" format="boolean" /><!--是否支持大小不等星星样式-->
    </declare-styleable>

    <declare-styleable name="BannerView">
        <attr name="placeholderImage" format="reference" />
        <attr name="scaleType">
            <enum name="CENTER_CROP" value="0" />
            <enum name="FIT_START" value="1" />
            <enum name="FIT_CENTER" value="2" />
            <enum name="FIT_END" value="3" />
            <enum name="CENTER" value="4" />
            <enum name="CENTER_INSIDE" value="5" />
            <enum name="FIT_XY" value="6" />
            <enum name="FOCUS_CROP" value="7" />
        </attr>
    </declare-styleable>

</resources>